<div class="span-24 content-wrap">
  <h2>Category: <%= @category.name %></h2>
  <div class="span-17">
    <% for post in @category.posts %>
      <h3> <%= post.title %></h3>
      <div class="span-4 post-des">
	<%= time_ago_in_words(post.created_at) %> ago. <br />
	<%= post.user.name %><br/>
	<% if admin? %>
	  <%= link_to 'Show', post %> |
	  <%= link_to 'Edit', edit_post_path(post) %> |
	  <%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method =>
		:delete %>
	<% elsif post.user && post.user_id == session[:user_id] %>
	  <%= link_to "Show", post %> |
	  <%= link_to 'Edit', edit_post_path(post) %> |
	  <%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method =>
		:delete %>
	<% end %>
      </div>
      <div class="span-12">
	<%=raw RedCloth.new(post.body).to_html %>
	<br />
      </div>
      <hr />
    <% end %>
    <% if admin? || current_user %>
      <%= link_to 'New Post', new_post_path %> <br /><br />
      <% end %>
  </div>
  <div class="span-6 last" id="sidebar">
    <%= render "shared/sidebar" %>
    <%= debug(params) if Rails.env.development? %>
  </div>
</div>
