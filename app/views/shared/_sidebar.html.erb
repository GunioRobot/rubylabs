
<div id="recent-software">
  <h3 class="caps">Recent Posts</h3>
  <div class="box">

    <span class="quiet">
      <% for post in @posts %>
	<%= link_to  post.title, post %><br />
	<% end %>
    </span>

  </div>
</div>

<div id="recent-reviews" class="prepend-top">
  <h3 class="caps">Categories</h3>
  <div class="box">

    <span class="quiet">
      <% for category in @categories %>
	<%= link_to category.name, category %> (<%= category.posts.count %>) <br />
      <% end %>

    </span>
  </div>
</div>




