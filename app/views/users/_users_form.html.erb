  <div class="span-17">
    <%= semantic_form_for @user do |form| %>
      <%= form.inputs do %>
	<%= form.input :name %>
	<%= form.input :email %>
	<%= form.input :password %>
	<%= form.input :password_confirmation %>
	<% if admin? %>
	<%= form.input :admin %>
	<% end %>
      <% end %>

      <%= form.buttons do %>
	<%= form.commit_button "Submit" %>
      <% end %>
    <% end %>

    <%= link_to "Back", users_path %><br /><br />

  </div>
