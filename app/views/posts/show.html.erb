<div class="span-24 content-wrap">
  <div class="span-18">
    <br />
    <h3><%= @post.title %></h3>

    <div class="span-4">
      <%= time_ago_in_words(@post.created_at) %> ago. <br />
      <%= current_user.name unless current_user.nil?  %><br />
      <%= link_to 'Edit', edit_post_path(@post) %> |
      <%= link_to 'Back', posts_path %> <br />
    </div>
    <div class="span-13">
      <%=raw sanitize(RedCloth.new(@post.body, [:filter_html, :filter_styles]).to_html) %>  <br />
    </div>
    <hr />
  </div>

  <div class="span-6 last" id="sidebar">
    <%= render "shared/sidebar" %>
    <%= debug(params) if Rails.env.development? %>
  </div>
</div>
