<%= form_for @post do |f| %>
  <%= render "shared/errors" %>
  <div>
    <p>
      <%= f.label :title %>
    </p>
    <p>
      <%= f.text_field :title %><br />
    </p>

    <p>
      <%= f.label :body %>
    </p>
    <p>
      <%= f.text_area :body %>
    </p>

    <p>
      <%= f.label "Published" %>
    </p>
    <p>
      <%= f.check_box :published %>
    </p>

    <p>
      <%= f.label :user %>
    </p>
    <p>

      <%= select_tag "post[user_id]",
	  options_from_collection_for_select(User.all, "id" , "name") %>

    </p>

    <p>
      <%= f.label :category %>
    </p>
    <p>
      <%= select_tag "post[category_id]",
	  options_from_collection_for_select(Category.all, "id" , "name")%>
    </p>
</div>
<div>
    <p>
      <%= f.submit "Submit" %>
    </p>
  </div>
<% end %>
